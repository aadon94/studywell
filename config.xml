<?xml version='1.0' encoding='utf-8'?>
<widget id="com.adamdon.sw" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>StudyWell</name>
    <description>
        An app to monitor the users behaviour and determine if the user is studying or not.
    </description>
    <author email="aadon94@gmail.com" href="http://cordova.io">
        Adam Don
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />

    <preference name="DisallowOverscroll" value="true"/>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,root" />

     <feature name="<service_name>">
        <param name="android-package" value="<full_name_including_namespace>" />
    </feature>


    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
